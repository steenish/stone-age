        _FluxTex ("Texture", 2D) = "white" {}
        _VelocityTex ("Texture", 2D) = "white" {}
        _NoiseTex ("Texture", 2D) = "white" {}
        _TimeStep ("Time step", Float) = 0.5
        _RainScale ("Rain scale", Float) = 0.5
